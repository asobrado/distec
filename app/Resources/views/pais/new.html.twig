{% extends ':app:new.html.twig' %}
{% block page_header %}
    <strong>{{ action }}</strong> Paises
{% endblock %}

{% block page_content %}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Configuraci√≥n <small>Paises</small></h2>
                <div class="clearfix"></div>
            </div>

            <div class="portlet-body">

                {{ form_start(form, {'attr': {'clss': 'form-horizontal', novalidate: 'novalidate'}}) }}

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Datos del Pais</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_errors(form.nombre) }}

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_label(form.nombre, null, {
                                        'label_attr': {'class': 'col-lg-2 col-lg-offset-2 control-label'}
                                    }) }}
                                    <div class="col-lg-6">
                                        {{ form_widget(form.nombre) }}
                                    </div>
                                </div>
                            </div>
                        </div>


                        <br/>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <div id="actions" class="form-group">
                                    <div class="btn-toolbar" role="toolbar">
                                        <button type="submit" name="save" class="btn btn-success"><i class="fa fa-check"></i> Guardar</button>
                                        {% set referer = app.request.headers.get('referer') %}
                                        <a class="btn btn-default" href="{{ referer }}">
                                            <i class="fa fa-list-alt"></i> Volver al listado
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
